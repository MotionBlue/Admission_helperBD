                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      >
                      <ImageView
                          android:layout_width="120dp"
                          android:layout_height="100dp"
                          android:src="@drawable/uiu"
                          android:scaleType="fitXY"
